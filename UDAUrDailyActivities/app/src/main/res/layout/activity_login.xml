<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vector2"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".LoginAndSignUpActivities.LoginActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="20dp"
        android:theme="@style/ThemeOverlay.AppCompat.DayNight"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textAlignment="center"
                android:textColor="#FFB600"
                android:textSize="36sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/email_input"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/my_custom_edit_text"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:drawablePadding="8dp"
                android:hint="Insira o seu e-mail"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textColorHint="#FFB600"/>

            <EditText
                android:id="@+id/password_input"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/my_custom_edit_text"
                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:drawablePadding="8dp"
                android:hint="Insira a sua senha"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textColorHint="#FFB600"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Entrar "
                android:id="@+id/btn_getin"
                android:textSize="19sp"
                android:layout_marginTop="25dp"
                android:backgroundTint="#FFB600"
                app:cornerRadius="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/welcome_text"
                android:text="NÃ£o possui uma conta? Crie uma."
                android:layout_gravity="center"
                android:padding="8dp"
                android:paddingTop="10dp"
                android:textColor="#FFB600"
                android:textSize="18sp"/>


        </LinearLayout>


    </androidx.cardview.widget.CardView>



</LinearLayout>